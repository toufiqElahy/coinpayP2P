
<div class="container-fluid">
    <div class="d-flex justify-content-between">
        <div class="top-menu d-flex align-items-center">
            <button type="button" class="btn-icon mobile-nav-toggle d-lg-none"><span></span></button>
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="header-brand" asp-action="Wallet">
                    <div class="logo-img">
                        <img src="" class="header-brand-img" alt="CoinPay.CR Affiliate">
                    </div>
                    <span class="text"></span>
                </a>
            }
        </div>
        <div class="top-menu d-flex align-items-center">
   
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="avatar" src="~/demo/img/user.jpg" alt=""></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="dropdown-item stopAjax" asp-controller="Account" asp-action="Logout"><i class="ik ik-power dropdown-icon"></i> Logout</a>
                    }
                    else
                    {
                        <a class="dropdown-item stopAjax" asp-controller="Account" asp-action="Login"><i class="ik ik-power dropdown-icon"></i> Login</a>
                    }
                </div>
            </div>

        </div>
    </div>
</div>